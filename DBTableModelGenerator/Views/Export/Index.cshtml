@using DBTableModelGenerator.Models;
@model DBTableModelGenerator.Models.ExportViewModel
@{
                /**/

                ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("Export", "Export", FormMethod.Post))
{
    <br />
    <div class="form-group row">
        <div class="col-sm-12">
            <label class="control-label">
                Connection String
            </label>
            @Html.TextBoxFor(x => x.ConnectionString, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-12">
            <label class="control-label">
                Template Path
            </label>
            @Html.TextBoxFor(x => x.TemplatePath, new { @class = "form-control" })
        </div>
    </div>
    <button type="submit" id="btnLoadDB" class="btn btn-success" formaction="@Url.Action("Export", "Export")">Export</button>
}

